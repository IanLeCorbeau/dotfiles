#
# wm independent hotkeys
#

# terminal emulator
alt + Return
	/usr/local/bin/st

# Xterm
alt + shift + Return
	xterm

# program launcher
alt + p
	dmenu_run -p Run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# Volume Control
#

XF86AudioRaiseVolume
	amixer -M -q sset Master 5%+

XF86AudioLowerVolume
	amixer -M -q sset Master 5%-

XF86AudioMute
	amixer set master mute

#
# Open Apps in Terminal
#
alt + shift + {r, t, c, f}
	st -e {ranger, vim, calcurse, vifm} 

alt + m
	st -e mutt

#
# dmenu shortcuts
#

# connect / disconnect networks
alt + n
	~/.local/bin/netcon

alt + shift + n
	~/.local/bin/netdiscon

# Mount/Unmount/poweroff Devices
alt + shift + m
	~/.local/bin/usbmount

alt + shift + u
	~/.local/bin/usbunmount

alt + shift + p
	~/.local/bin/usbpoweroff

# Poweroff / Reboot
alt + shift + l
	~/.local/bin/poweroffreboot

# Open Image with sxiv
alt + i
	~/.local/bin/openimage

# Open Videos with mpv (from vid folder)
alt + v
	~/.local/bin/openvideo

# Open Videos with mpv (from browser)
alt + shift + v
	~/.local/bin/mpvload

# Switch Monitors (via dmenu)
alt + shift + s
	~/.local/bin/monitor

# Change Wallpaper
alt + shift + w
	~/.local/bin/chwall-dmenu

#
# Misc
#

# Take Screenshot
Print
	scrot ~/Pictures/screenshot-%Y-%m-%d-%T.png
